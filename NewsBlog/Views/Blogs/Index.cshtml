
@using NewsBlog.Models.Data;

@model PaginatedList<NewsBlog.Models.Data.Blog>
@{
    ViewData["Title"] = "Index";
}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"> <a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item" active>Новости</li>
    </ol>
</nav>


<h2>
    Новости
</h2>


<h6>
    <a class="btn text-dark" asp-action="Create">
        <i class="far fa-plus-square"></i> Добавить новость
    </a>
</h6>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TitleSort" asp-route-currentFilter="@ViewData["CurrentFilter"]">Заголовок</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.TextSort" asp-route-currentFilter="@ViewData["CurrentFilter"]">Текст</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateOfSort" asp-route-currentFilter="@ViewData["CurrentFilter"]">Дата публикации</a>
            </th>
            <td>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.CategorySort" asp-route-currentFilter="@ViewData["CurrentFilter"]">Категория</a>
            </td>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.FormOfCategory)
            </td>
                <td>
                    <a class="btn text-dark" asp-action="Edit" asp-route-id="@item.Id" title="Редактировать"><i class="fas fa-pencil-alt"></i></a> |
                    <a class="btn text-dark" asp-action="Details" asp-route-id="@item.Id" title="Подробнее"><i class="far fa-eye "></i></a> |
                    <a class="btn text-dark" asp-action="Delete" asp-route-id="@item.Id" title="Удалить"><i class="fas fa-minus-square"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Назад
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Вперёд
</a>