@model NewsBlog.Models.Data.Category

@{
    ViewData["Title"] = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-iteam"> <a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li> / </li>
        <li class="breadcrumb-iteam"> <a asp-controller="Categories" asp-action="Index">Категории</a></li>
        <li> / </li>
        <li class="breadcrumb-iteam" active> Редактирование</li>
    </ol>
</nav>
<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i> Вернуться к списку
    </a>
</h3>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FormOfCategory" class="control-label"></label>
                <input asp-for="FormOfCategory" class="form-control" />
                <span asp-validation-for="FormOfCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
