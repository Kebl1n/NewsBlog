@model NewsBlog.Viewmodels.FormsOfCategory.EditFormsOfCategory

@{
    ViewData["Title"] = "Редактирование Категории";
}

<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"> <a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"> <a asp-controller="Categories" asp-action="Index">Категории</a></li>
        <li class="breadcrumb-item" active> Редактирование</li>
    </ol>
</nav>


<h3>
    <a class="btn text-dark" asp-action="Index" title="Вернуться к списку">
        <i class="fas fa-arrow-left"></i>
    </a>
    Редактировать категорию
</h3>
<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FormOfCategory" class="control-label"></label>
                <input asp-for="FormOfCategory" class="form-control" />
                <span asp-validation-for="FormOfCategory" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
